*
    margin 0
    padding 0
.cell
    border-top 1px solid red
    border-right 1px solid red
    width 20px
    height 20px
    transform rotate(45deg)
.weui-cell
    padding 16px
    text-decoration none
    position relative
    display flex
    .weui-cell__bd
        flex 1px
    .weui-cell__ft
       padding-right 22px
       position relative
       &::after
          content ''
          width 12px
          height 12px
          border 1px solid #000000
          border-bottom none 
          border-left none
          transform rotate(45deg)
          position absolute
          top 2px
